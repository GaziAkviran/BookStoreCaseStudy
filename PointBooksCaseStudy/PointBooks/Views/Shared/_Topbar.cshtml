
@*@model PointBooks.Models.ViewModels.HomeIndexViewModel*@

<!-- Ad Banner or Cargo Banner (can be changed in the feature) -->
<header>
    <div class="banner">
        <a href="https://www.pointbooks.com/kargobedava">
            <img src="~/images/banner2.jpg" alt="Ücretsiz Kargo!">
        </a>
    </div>
</header>

<div class="top-bar">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-md-2">
                <a href="@Url.Action("Index", "Home")">
                    <img class="logo img-fluid" src="/images/logo.png" alt="logo">
                </a>
            </div>

            <div class="col-md-6">
                <form action="/Book/Search" method="get" class="d-flex">
                    <input class="search-form form-control" type="search" name="query" placeholder="Kitap ara..." aria-label="Search">
                    <button class="search-button btn btn-primary" type="submit">ARA</button>
                </form>
            </div>
           
            <div class="col-md-4 d-flex align-items-center justify-content-end">
                <ul class="nav">
                    <li class="nav-item">
                        <a href="#">Kampanyalar</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Hesabım
                            </a>
                            <div class="dropdown-menu" aria-labelledby="accountDropdown">
                                <a class="dropdown-item" href="@Url.Action("Profile", "Account")">Hesabım</a>
                                <a class="dropdown-item" href="@Url.Action("Logout", "Account")">Çıkış Yap</a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="loginDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Giriş Yap
                        </a>
                        <div class="dropdown-menu" aria-labelledby="loginDropdown">
                            <a class="dropdown-item" href="@Url.Action("Login", "Account")">Giriş Yap</a>
                            <a class="dropdown-item" href="@Url.Action("Register", "Account")">Üye Ol</a>
                        </div>
                    </li>
                    }
                    
                    <li class="nav-item">
                        <a class="nav-link cart-icon" href="#">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="cart-count">0</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>